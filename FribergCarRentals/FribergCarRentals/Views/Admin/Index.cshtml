@{
    ViewData["Title"] = "Admin login";
}

<h1 class="text-center mt-5">Logga in som administratör</h1>
@if (ViewBag.Result != null)
{
    <p class="text-center">@ViewBag.Result</p>
}
<form asp-action="LoggaIn" class="d-flex justify-content-center">
    <div class="d-flex flex-column w-25 justify-content-center">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <label for="email">Email</label>
        <input type="text" name="email" />
        <label for="password">Lösenord</label>
        <input type="text" name="password" />
        <button class="btn btn-dark mt-1" type="submit">Logga in</button>
    </div>
</form>