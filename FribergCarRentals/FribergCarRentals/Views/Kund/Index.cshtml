@{
    ViewData["Title"] = "Logga in";
}

<h1 class="text-center mt-5">Logga in som kund</h1>
<form method="post" asp-action="LoggaIn" class="d-flex justify-content-center">
    <div class="d-flex flex-column w-25 justify-content-center">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" />
        <label for="password">Lösenord</label>
        <input type="text" name="password" class="form-control" />
        <button class="btn btn-dark mt-1" type="submit">Logga in</button>
    </div>
</form>