@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FribergCarRentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FribergCarRentals.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FribergCarRentals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bilar" asp-action="Index">Bilar</a>
                        </li>
                        @if (Context.User.Claims == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Kund" asp-action="Index" asp-route-returnUrl="@Context.Request.Path">Logga in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Kund" asp-action="Registrera" asp-route-returnUrl="@Context.Request.Path">Registrera</a>
                            </li>
                        }
                        @if (Context.User.Claims.Any())
                        {
                            if (Context.User.HasClaim(ClaimTypes.Role, "kund"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bokningar" asp-action="Index">Mina bokningar</a>
                                </li>
                                <li class="nav-item">
                                    <p class="navbar-text text-dark">Inloggad som kund: @Context.User.FindFirstValue(ClaimTypes.Name)</p>
                                </li>
                            }
                        }
                </ul>
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FribergCarRentals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
